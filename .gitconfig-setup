# This is Git's per-user configuration file.
# It's generally in /Users/yourusername/.gitconfig

# NOTE that this is an extremely lazy way to go about things, and goofy.
# rather than having the env vars in a YAML file / dotenv,
# We're just echoing it in ad appending it to this file in init.bootstrap.sh.
# [user]
  # name = gitusername
  # email = gitemail

# Terminal settings for kitteh mode:
[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = magenta
  local = yellow
  remote = yellow

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = cyan bold

[color "status"]
  added = yellow bold
  changed = magenta bold
  untracked = cyan bold

[url "git@github.com:"]
	insteadOf = https://github.com/
